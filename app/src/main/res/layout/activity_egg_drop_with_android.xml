<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_egg_drop_with_android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.algorithm.eggdroppingpuzzlefinal.EggDropWithAndroidActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/EggEdittxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Egg"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/FloorEditTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Floor"
                android:inputType="numberDecimal" />

            <Button
                android:id="@+id/startBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Start"
                android:background="@drawable/frame_floor"
                android:backgroundTint="@drawable/frame_floor" />
        </LinearLayout>

        <TextView
            android:id="@+id/currentStateTxt"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="State"
            android:textSize="25dp"
            android:gravity="center"
            android:background="@drawable/frame_floor"
            android:layout_height="60dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#eeeeff">

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="400dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_width="200dp">

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/to60Txt"
                    android:layout_weight="1"
                    android:background="@drawable/frame_floor" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/to50Txt"
                    android:layout_weight="1"
                    android:background="@drawable/frame_floor" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/to40Txt"
                    android:layout_weight="1"
                    android:background="@drawable/frame_floor" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/to30Txt"
                    android:layout_weight="1"
                    android:background="@drawable/frame_floor" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/to20Txt"
                    android:layout_weight="1"
                    android:background="@drawable/frame_floor" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/to10Txt"
                    android:layout_weight="1"
                    android:background="@drawable/frame_floor" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/historyTxt"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#000000"
        android:padding="10dp"
        android:text="State"
        android:textColor="#fff" />
</LinearLayout>
